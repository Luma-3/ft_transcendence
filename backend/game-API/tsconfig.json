{
	"compilerOptions": {
    
    "declaration": true,
    /* Output & Source Structure */
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node", // Use Node.js module resolution strategy

    /* Language & Modules Target */
	  "target": "ES2020", // Use "ES2020" for modern JavaScript features
    "module": "ESNext", // Use "ESNext" for modern module syntax

    /* Interoperability & Compatibility */
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "resolveJsonModule": true, // Allows importing JSON files
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
  
	  /* Linting */
	  // "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noFallthroughCasesInSwitch": true,
	  "noUncheckedSideEffectImports": true,
	},
	"include": ["./src/"],
  "exclude": ["./node_modules/"],
}
